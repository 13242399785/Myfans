/* pages/member/member.wxss */
.tab-bar-item .mycommunity{
  color: #717171;
}
.member-wapper{
  background: #f7f7f7;
  min-height: 100%;
}
/* header */
.member-header{
  position: relative;
  width: 100%;
  color: #fff;
  text-align: center;
  padding-top:1rem;
}
.header-wapper{
      background: -webkit-gradient(linear, left top, right top, from(#e4b245), to(#d7b971));
    background: linear-gradient(to right, #e4b245, #d7b971);
    border-radius: 5px;
    padding-top:1.21429rem;
    margin:0 1rem 1rem 1rem;
}
.member-logo{
  display: block;
  -webkit-box-sizing: content-box;
  box-sizing: content-box;
  width: 4.28571rem;
  height: 4.28571rem;
  margin: 0 auto;
  overflow: hidden;
  margin-bottom: 0.92857rem;
  border-radius: 50%;
  background: #ccc;
}
.member-img{
  width: 100%;
  height: 100%;
}
.member-name{
  font-size: 1.14286rem;
}
.member-info{
  padding: 1.07143rem 0;
  font-size: 1rem;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
}
.info-col{
  -webkit-box-flex: 1;
  -ms-flex: 1;
  flex: 1;
  position: relative;
  width: 100%;
}
.info-col::after{
  content:'';
  position: absolute;
  right: 0;
  height: 100%;
  width: 2rpx;
  background:#fff;
  top: 0;
}
.info-col:last-child::after{
  width: 0;
}
.member-personal{
  position: absolute;
  top: 15%;
  right: 10%;
  width: 4.28571rem;
  height: 1.42857rem;
  color: #fff;
  font-size: 0.85714rem;
  font-family: sans-serif;
  line-height: 1.42857rem;
  text-align: center;
  border: 2rpx solid #fff;
  border-radius: 4rpx;
}
/* center */
.myinfo{
  color: #717171;
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
  -webkit-box-align: center;
  -ms-flex-align: center;
  align-items: center;
  padding:0 1.42857rem;
  height: 3.57143rem;
}
.myinfo .iconfont{
  font-size: 48rpx;
  color: #717171;
}
.myinfo .icon-youbian{
  font-size: 36rpx;
}
.mr-14{margin-right: 1rem;}
.myinfo-col{
    -webkit-box-flex: 1;
    -ms-flex: 1;
    flex: 1;
    width: 100%;
}
.member-card{
  margin-top: 0.71429rem;
  background: #fff;
}
.card-title{
  color: #717171;
  height: 2.85714rem;
  margin-left: 1.42857rem;
  font-size: 1.14286rem;
  line-height: 2.85714rem;
  border-bottom: 2rpx solid #eee;
}
.card-list{
  width: 25%;
  display: inline-block;
  text-align: center;
  font-size: 28rpx;
  color: #717171;
  height: 5.71429rem;
}
.card-list .iconfont{
  display: block;
  font-size: 48rpx;
  color: #717171;
  margin: 1.07143rem auto 0.71429rem;
}